This part is manual:

lsblk
fdisk /dev/sda #It will open a prompt to format the disk
n
enter
enter
enter
w

partprobe
mkfs.xfs /dev/sda1
mkdir /mnt/iscsi
mount -t xfs /dev/sda1 /mnt/iscsi
df -h
blkid
copy UID
umount /dev/sda1

vi /etc/auto.misc

add at the end

iscsi		-fstype=xfs											:UUID
nfsshare	-fstype=nfs,rw										vm1:/nfsshare
smbshare	-fstype=cifs,rw,credentials=/root/smb-cred.txt 		://vm1/smbshare


yum -y install samba-client cifs-utils

touch ~/smb-cred.txt
chmod 600 ~/smb-cred.txt
vi ~/smb-cred.txt
##in the file add
username=uone
password=Pa11word

systemctl restart autofs